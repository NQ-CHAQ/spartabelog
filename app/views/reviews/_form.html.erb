<div class="col-lg-12">

<%= form_for [@restaurant, @review] do |f| %>
<div class="form-group">
  <%= f.label :point ,"点数評価をしましょう" %><br/>
  <%= f.collection_select( :point, Point.all, :id, :star, class: "form-control" ) %>
</div>
<div class="form-group">
  <%= f.label :body ,"レビューを書きます" %><br/>
  <%= f.text_field :body , class: "form-control" %>
</div>

<div class="form-group">
  <%= f.submit class: "btn btn-primary"%>
</div>
<% end %>
</div>
