<div class="col-md-8">

<h1>トップページ一覧ページ</h1>

<% @restaurants.each do |restaurant| %>
  <div class="panel panel-default">
    <div class="panel-heading">
    <strong><%= link_to restaurant.name, restaurant_path( restaurant )  %></strong>
    <p class="text-muted text-right"><%= restaurant.created_at %></p>
    </div>

    <div class="panel-body">
      <div class="col-md-3">
      <img src="http://image1-4.tabelog.k-img.com/restaurant/images/Rvw/18190/640x640_rect_18190873.jpg" class="img-responsive">
      </div>
      <!-- レビューを取得して回す-->
      <div class="col-md-9">
      <b>コメントの合計件数：<span class="badge"><%= restaurant.reviews.count %></span></b>
          <ul>
        <% restaurant.reviews.each do |review| %>
          <li><%= review.body %>   <span class="glyphicon glyphicon-user">  <%= review.user.user_name %></span></li>
        <% end %>
        </ul>
      </div>
    </div><!-- /panel-body -->
</div><!-- /panel panel-default -->
  <% end %>

<h2>最新のコメント一覧</h2>
<% @reviews.each do |review| %>
<!-- ここからコメントの出力ループ-->
  <div class="testimonials">
    <div class="active item">
      <blockquote><p><%= review.body %></p></blockquote>
        <div class="carousel-info">
        <img alt="" src="http://keenthemes.com/assets/bootsnipp/img1-small.jpg" class="pull-left">
        <div class="pull-left">
        <span class="testimonials-name"><%= review.user.user_name %></span>
        <span class="testimonials-post"><%= link_to review.restaurant.name, restaurant_path( review.restaurant_id )  %></span>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div><!-- end col-md-8 -->

<div class="col-md-4">

<!-- Shop登録-->
<a href="restaurants/new" class="btn btn-danger btn-lg btn-block"><span class="glyphicon glyphicon-plus">新規ショップの登録</span></a><br/>

<!-- Profile -->
<div class="panel panel-default">
<div class="panel-heading">
<% if user_signed_in?  %>
<strong><%=  current_user.user_name %>さん</strong>
<% else %>
